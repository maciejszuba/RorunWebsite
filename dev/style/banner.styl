body
    .banner
        background-image: url("../img/Rorun_layout_pliki/home/background_image.jpg");
        height 580px;
        background-size: cover;
        background-repeat: no-repeat;
        background-position: top 10% center;
        color: white;
        padding-top: 170px;

        .top-text
            font-size: 100pt; 
            font-weight: 800;
            margin: 0;
            margin-left: -7px;
            line-height: 100pt;

        .middle-text
            font-size: 54pt;
            font-weight: 400;
            margin: 0;
            margin-left: -3px;
            margin-bottom: 8px;
            line-height: 54pt;

        .bottom-text
            font-size: 18pt;
            font-weight: 400;
            margin: 0;

            &::after
                content: "";
                width: 300px;
                height 1px;
                background-color: white;
                display: block;
                margin-top: 30px;

        .link
            font-size: 18pt;
            font-weight: 400;
            font-style: italic;
            color: white;
            margin: 0;
            margin-top: 5px;

        a 
            text-decoration: none;

    .about-banner
        background-image: url("../img/Rorun_layout_pliki/o nas/background_image.jpg");

    .news-banner
        background-image: url("../img/Rorun_layout_pliki/aktualnosci/background_image.jpg");

    .contact-banner
        background-image: url("../img/Rorun_layout_pliki/kontakt/background_image.jpg");