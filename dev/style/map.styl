.map
    width: 100%
    background-color: lightest-gray
        
    iframe
        height 400px
        width: 100%

.contact-map
    position: relative;

    div
        position: absolute;
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%);
        background: white;
        color: font-black;
        height: 60px;
        width: 180px;
        display: flex;
        justify-content: center;
        align-items: center;

        &::after
            content: "";
            position: absolute;
            width: 30px;
            height: 30px;
            background: white;
            bottom: -40%;
            left: 50%;
            transform: rotate(45deg) translateX(-50%);
            z-index: -10;

        img
            width: 70%;
            margin: 0 auto;